{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowJs": false,
    "sourceMap": false, 
    "rootDir": "src",    
    "outDir": "dist",  // TS文件编译后会放入到此文件夹内
    "baseUrl": "./",
    "paths": {
      "@/*":[
        "src/*",
      ],
      "@by/ioc":[ "src/package/ioc/src"],
      "@by/router":[ "src/package/router/src"],
      "@by/nestjs":[ "src/package/nestjs/src"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.d.ts",
  ],
 
}


